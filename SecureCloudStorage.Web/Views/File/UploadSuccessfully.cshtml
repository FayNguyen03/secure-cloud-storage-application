@{
    ViewData["Title"] = "Upload Successfully";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
<style>
    body {  
    }

    .success-box{
        text-align: center;
        padding: 2rem;
        background-color: white;
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .btn-custome{ 
        margin-top: 1.5rem;
    }
</style>

<div class="success-box">
    <h1 class="text-success"><i class="fa-solid fa-circle-check"></i></h1>
    <h2>File Uploaded and Encrypted Successfully!</h2>
    <p class="lead">The file has been uploaded and encrypted securely.</p>

    <a asp-controller="File" asp-action="Upload" class="btn btn-primary btn-success">
        Upload Another File
    </a>
</div>

<script>
    confetti({
        particleCount: 200,
        spread: 100,
        origin: { y: 0.6 }
    });
</script>