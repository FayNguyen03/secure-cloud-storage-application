@{
    ViewData["Title"] = "Registraton Successfully";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
<style>
    body {
        
    }

    .success-box{
        text-align: center;
        padding: 2rem;
        background-color: white;
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .btn-custome{ 
        margin-top: 1.5rem;
    }
</style>

<div class="success-box">
    <h1 class="text-success"><i class="fa-solid fa-circle-check"></i></h1>
    <h2>User Registered Successfully!</h2>
    <p class="lead">The certificate has been created and saved securely.</p>

    <a asp-controller="AdminView" asp-action="Register" class="btn btn-primary btn-success">
        Register Another User
    </a>
    <br/><br/>
    <a asp-controller="AdminView" asp-action="SignIn" class="btn btn-primary btn-success">SignIn</a>
        
    </a>
</div>

<script>
    confetti({
        particleCount: 200,
        spread: 100,
        origin: { y: 0.6 }
    });
</script>